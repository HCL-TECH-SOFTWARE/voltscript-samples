meta {
  name: login
  type: http
  seq: 1
}

post {
  url: {{serverUrl}}/auth
  body: json
  auth: none
}

headers {
  Content-Type: application/json
  accept: application/json
}

body:json {
  {
    "username": "{{username}}",
    "password": "{{password}}"
  }
}

script:post-response {
  bru.setEnvVar("token",res.body.bearer)
}

tests {
  test("response has bearer", function() {
    expect(res.body.bearer).to.be.a("string")
  })
}
